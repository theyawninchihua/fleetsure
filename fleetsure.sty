\newcommand{\starfull}{%
  \tikz[baseline=-1ex]{%
    \node[star,star points=5,star point ratio=2.6,
         minimum size=1.2em,inner sep=0pt,draw=black,fill=gold]{};%
  }%
}

\newcommand{\starhollow}{%
  \tikz[baseline=-1ex]{%
    \node[star,star points=5,star point ratio=2.6,
         minimum size=1.2em,inner sep=0pt,draw=black,fill=white]{};%
  }%
}

\newcommand{\starrating}[1]{%
  \foreach \i in {1,...,5}{%
  \ifnum\i>#1
    \starhollow
  \else
    \starfull
  \fi
    }%
}

\newcommand{\statuscircle}[1]{%
